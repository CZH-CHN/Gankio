<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_cardview_margin"
        app:cardCornerRadius="4dp"
        android:minHeight="@dimen/item_cardview_height">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_three_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/item_font_size"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_three_tv">
                <ImageView
                    android:id="@+id/item_three_iv1"
                    android:layout_width="70dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:src="@color/colorPrimary"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/item_three_iv2"
                    android:layout_width="70dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:src="@color/colorAccent"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/item_three_iv3"
                    android:layout_width="70dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:scaleType="centerCrop"
                    android:src="@color/colorPrimaryDark"
                    android:layout_weight="1"/>
            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>