<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_margin="@dimen/item_cardview_margin"
        app:cardCornerRadius="4dp"
        android:minHeight="@dimen/item_cardview_height">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/item_one_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="@dimen/item_font_size"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@id/item_one_iv"/>

            <ImageView
                android:id="@+id/item_one_iv"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@color/colorPrimary"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical|right"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>